{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Configuration Application",
  "description": "Schéma de validation pour la configuration principale de l'application",
  "type": "object",
  "required": ["application", "features"],
  "properties": {
    "application": {
      "type": "object",
      "required": ["name", "version", "environment"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Nom de l'application"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Version de l'application (format semver)"
        },
        "environment": {
          "type": "string",
          "enum": ["development", "testing", "production"],
          "description": "Environnement d'exécution"
        },
        "debug": {
          "type": "boolean",
          "description": "Mode debug activé"
        },
        "host": {
          "type": "string",
          "description": "Adresse d'écoute du serveur"
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "description": "Port d'écoute du serveur"
        }
      }
    },
    "features": {
      "type": "object",
      "properties": {
        "file_reading": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "supported_formats": {
              "type": "array",
              "items": { "type": "string" }
            },
            "max_file_size_mb": {
              "type": "integer",
              "minimum": 1
            }
          }
        },
        "async_operations": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "max_concurrent_tasks": {
              "type": "integer",
              "minimum": 1
            },
            "timeout_seconds": {
              "type": "integer",
              "minimum": 1
            }
          }
        }
      }
    }
  }
}

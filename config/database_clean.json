{
  "database": {
    "type": "sqlite",
    "name": "condos.db",
    "path": "data/condos.db",
    "migrations_path": "data/migrations/"
  },
  "connection": {
    "pool_size": 5,
    "timeout_seconds": 30,
    "retry_attempts": 3
  },
  "migrations": {
    "auto_migrate": false,
    "validate_schema": true
  },
  "performance": {
    "enable_wal_mode": true,
    "cache_size_kb": 2048,
    "synchronous": "NORMAL"
  }
}
